    <div class="container">
      <div style="text-align: center;" id="danger" class="alert alert-danger <% if(noMessages){ %> d-none <% } %>" >
        <%= errMsg %>
      </div>
        <form action="/post/create" method="POST" enctype="multipart/form-data">
            <label for="fname">Title</label>
            <input type="text" id="fname" name="title" placeholder="Title.."><br>
        
            <label for="color">Color</label>
            <input type="text" id="color" name="color" placeholder="Color..">
            <br>
            <label for="brand">Brand name</label>
            <input type="text" id="brand" name="brand" placeholder="Brand Name">
            <br>
            <label for="location">Location</label>
            <input type="text" id="location" name="location" placeholder="Location of item found">
            <br>
            <label for="size">Category</label>
            <select id="size" name="category">
                <option value="electronics">ELECTRONICS</option>
                <option value="wallets">WALLETS</option>
                <option value="cards">CARDS</option>
                <option value="others">OTHER PRODUCTS</option>
            </select><br>
            <br>
            <label for="description">Description</label>
            <textarea id="description" name="description" placeholder="Describe the item.." style="height:200px"></textarea>
            <br>
            <div class="form-group">
              <div class='input-group date' id='datetimepicker1' style="width: 500px;">
                <input type='text' class="form-control" name="datetime" placeholder="Select Date and Time" >
                <span class="input-group-addon">
                              <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>
            </div>
            <br>
            <div class="center">
                <div class="upload-btn-wrapper">
                    <button class="btn">Upload a file</button>
                    <input type="file" name="photo" accept="image/*" >
                  </div>
            </div>
            <br>
            <input type="submit" value="Submit">

            

          </form>
    </div>

