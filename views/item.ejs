        <br>





        
        <div class="container">
            <div class="sidebar" style="width: 300px; float:left; height:100%; margin:10px">
                <div>
                    <p><h3><b>Categories</b></h3></p>
                </div>
                <br>
                <div class="categories" >
                    <a href="#"><p>Apparels</p></a>
                    <a href="#"><p>Wearables</p></a>
                    <a href="#"><p>Electronic Items</p></a>
                    <a href="#"><p>Books</p></a>

                </div>
                <br>



                <div>
                    <p><h3><b>Approximate Price</b></h3></p>
                </div>

                <br>
                <div class="slidecontainer">
                    <input type="range" min="1" max="10000" value="50" class="slider" id="myRange">
                    <br>
                    <p>Price:Rs. <span id="demo"></span></p>
                  </div>
                  <br>
                  <script>
                  var slider = document.getElementById("myRange");
                  var output = document.getElementById("demo");
                  output.innerHTML = slider.value;
                  
                  slider.oninput = function() {
                    output.innerHTML = this.value;
                  }
                  </script>


                <br>
     

                <div>
                    <p><h3><b>Color</b></h3></p>
                </div>
                  <input type="radio" id="red" name="color">
                  <label for="red">Red</label><br>
                  <input type="radio" id="blue" name="color">
                  <label for="blue">Blue</label><br>
                  <input type="radio" id="black" name="color">
                  <label for="black">Black</label><br>
                  <input type="radio" id="purple" name="color">
                  <label for="purple">Purple</label><br>
                  <input type="radio" id="brown" name="color">
                  <label for="brown">Brown</label><br>
                  <br>
                  <button class="button">Filter</button>

            </div>

<!-- Rightside -->




            <div style="width: 800px; float:left;  margin:10px">
                
                <div class="container">
                  <div style="width: 400px; height :400px ;float:left;  margin:10px">
                  <img src="<%= data.posts[0].photo %>" style="width: 400px; height :400px ; object-fit:fill" alt="">
                  

                </div>
                <div style="width: 400px; height :500px ;float:left;  margin:10px">
                    <h1><%= data.posts[0].title %></h1>
                    <br>
                    <h6><b>Location:</b> <%= data.posts[0].title %></h6><br>
                    <h6><b>Description:</b> <%= data.posts[0].description></h6><br>
                    <h6><b>Person to Contact:</b>  <%= data.posts[0].postedBy.fullname %></h6><br>
                    <h6><b>Email:</b><a href="mailto:<%= data.posts[0].postedBy.email %>"> <%= data.posts[0].postedBy.email %></a> </h6><br><br>
                    <h6><b>Color:</b> Blue </h6><br>
                    <h6><b>Category:</b> <%= data.posts[0].category %> </h6><br>
                    <a href="/price/:<%= data.posts[0].description %>"><input type="submit" value="Get Estimated Price" id="order-button1"></a>
                    <a href="/>"><input type="submit" value="Proceed to Buy" id="order-button1"></a>
                    <a href="/>"><input type="submit" value="Chat" id="order-button1"></a>
                    
  
                </div>

        </div>
